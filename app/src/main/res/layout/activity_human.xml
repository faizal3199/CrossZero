<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context="tk.faizalatwork.developer.crosszero.Human">

<TextView
    android:layout_width="match_parent"
    android:textColor="#00897B"
    android:layout_weight="0.9"
    android:layout_height="0dp"
    android:layout_marginBottom="0dp"
    android:textAlignment="center"
    android:textSize="50sp"
    android:text="@string/letsPlay"
    android:onClick="FirstClick"
    android:id="@+id/turnView" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="horizontal"
    android:id="@+id/PlayAgain">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"/>
    <Button
        android:text="@string/startgame"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_renew"
        android:layout_weight="1"
        android:onClick="FirstClick"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"/>
</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/lay1"
    android:orientation="horizontal"
    android:visibility="invisible">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_1_3" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_2_3"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_3_3"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/lay2"
    android:orientation="horizontal"
    android:visibility="invisible">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_1_2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_2_2"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_3_2"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:id="@+id/lay3"
    android:orientation="horizontal"
    android:visibility="invisible">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_1_1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_2_1"/>
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="@drawable/border"
        android:layout_height="match_parent"
        android:textSize="100sp"
        android:textAlignment="center"
        android:onClick="playerClick"
        android:id="@+id/id_3_1"/>
</LinearLayout>
</LinearLayout>

