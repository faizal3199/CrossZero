<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="tk.faizalatwork.developer.crosszero.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textColor="#5C6BC0"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:textAlignment="center"
        android:textSize="60sp"
        android:text="@string/chooseMode"
        android:id="@+id/chooseMode" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:id="@+id/imageOption">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/human"
            android:contentDescription="@string/humanHuman"
            android:id="@+id/humanImage"
            android:onClick="HumanIntent"
            android:layout_margin="5dp" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bot"
            android:contentDescription="@string/botBot"
            android:layout_margin="5dp"
            android:onClick="BotIntent"
            android:id="@+id/botImage" />
    </LinearLayout>
</LinearLayout>
